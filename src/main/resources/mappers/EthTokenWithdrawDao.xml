<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aht.mapper.UserWithdrawDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.carbon.entity.UserWithdrawEntity" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="coinId" column="coin_id"/>
        <result property="coinName" column="coin_name"/>
        <result property="coinType" column="coin_type"/>
        <result property="address" column="address"/>
        <result property="txid" column="txid"/>
        <result property="num" column="num"/>
        <result property="fee" column="fee"/>
        <result property="mum" column="mum"/>
        <result property="chainFee" column="chain_fee"/>
        <result property="blockNum" column="block_num"/>
        <result property="remark" column="remark"/>
        <result property="step" column="step"/>
        <result property="status" column="status"/>
        <result property="auditTime" column="audit_time"/>
        <result property="lastUpdateTime" column="last_update_time"/>
        <result property="created" column="created"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, uid, coin_id,coin_name, coin_type, address,txid,num,fee,mum,chain_fee,block_num,remark,step,status,audit_time,last_update_time,created
    </sql>
    <select id="pageByTradeStatus" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM eth_token_withdraw
        WHERE status=#{status} AND coin_type='TRX' ORDER BY id ASC LIMIT #{offSet},#{pageCount};
    </select>

    <update id="updateStatusAndBlockNo">
        UPDATE eth_token_withdraw
        SET status = #{status},
        block_num = #{blockNo},
        remark = #{remark},
        last_update_time=NOW()
        WHERE id = #{id} AND status = #{oldStatus}
    </update>

    <update id="updateConfirmStatus">
        UPDATE eth_token_withdraw
        SET status = #{status},
        remark = #{remark},
        last_update_time=NOW()
        WHERE status = #{oldStatus} AND block_num &lt;= #{confirmBlockNo}
    </update>

    <update id="updateStatusAndTxId">
        UPDATE eth_token_withdraw
        SET status = #{status},
        txid = #{transactionId},
        remark = #{remark},
        last_update_time=NOW()
        WHERE id = #{id} AND status = #{oldStatus}
    </update>

</mapper>