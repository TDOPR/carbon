<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aht.mapper.PowerConfigDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.carbon.entity.PowerConfigEntity" id="powerConfigMap">
        <result property="id" column="id"/>
        <result property="power" column="power"/>
        <result property="lpPower" column="lp_power"/>
    </resultMap>

    <update id="addPower">
        UPDATE power_config
        SET power = power + #{power}
    </update>

    <update id="addLpPower">
        UPDATE power_config
        SET lp_power = lp_power + #{lpPower}
    </update>

</mapper>